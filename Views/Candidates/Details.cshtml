@model VoteCounter.Data.Models.Candidate

@{
	ViewData["Title"] = "Детайли за кандидата";
	Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/CandidateDetails.css" asp-append-version="true" />

<!-- Hero Section -->
<section class="cd-hero">
	<div class="cd-hero-inner">
		<img class="cd-photo" src="@(Url.Content(Model.ImageUrl))" alt="@Model.Name" />
		<div class="cd-headline">
			<h1>@Model.Name</h1>
			<p class="cd-sub">@Model.Description</p>
			<a asp-action="Vote" asp-route-id="@Model.Id" class="cd-vote-btn">Гласувай за @Model.Name</a>
		</div>
	</div>
</section>


<!-- Info Section -->
<section class="cd-info">
	<div class="cd-info-grid">

		<!-- Биография -->
		<article class="cd-card">
			<h2>Биография</h2>
			@if (Model.Name.Contains("Борислав"))
			{
				<p>
					Борислав Сапунджиев е мъдър и далновиден лидер, който вярва в силата на знанието и последователните действия.
					Той е човек с визия, който знае как да води с разум и баланс. Неговата цел е стабилна и модерна България,
					изградена върху иновации, образование и доверие.
				</p>
			}
			else if (Model.Name.Contains("Валентин"))
			{
				<p>
					Валентин Узунов е решителен и справедлив защитник на свободата на словото.
					Той е вдъхновяващ лидер, който вярва, че обществото се развива чрез уважение и взаимно разбиране.
					Неговият приоритет е всеки гражданин да бъде чут и уважаван.
				</p>
			}
			else if (Model.Name.Contains("Атанас"))
			{
				<p>
					Атанас Кьосеиванов е идеалист с дълбока вяра в равенството и общността.
					Той следва принципите на солидарността и справедливостта,
					като вярва, че истинската сила идва, когато всички работим заедно.
				</p>
			}
			else
			{
				<p>Кратка биография ще бъде добавена скоро.</p>
			}
		</article>

		<!-- Визия -->
		<article class="cd-card">
			<h2>Визия</h2>
			@if (Model.Name.Contains("Борислав"))
			{
				<p>
					Да изгради стабилна и модерна държава, основана на образование, технологии и морални ценности.
					Визията му е бъдеще, в което решенията се вземат разумно и устойчиво.
				</p>
			}
			else if (Model.Name.Contains("Валентин"))
			{
				<p>
					Да гарантира свободата на словото и равен достъп до информация.
					Да изгради общество, в което всеки може да се изрази и бъде чут, без страх и натиск.
				</p>
			}
			else if (Model.Name.Contains("Атанас"))
			{
				<p>
					Да създаде справедлива и солидарна държава, в която хората се подкрепят взаимно,
					а икономическите ресурси се споделят в полза на всички.
				</p>
			}
			else
			{
				<p>Визията ще бъде добавена скоро.</p>
			}
		</article>

		<!-- Основни цели -->
		<article class="cd-card">
			<h2>Основни цели</h2>
			<ul>
				@if (Model.Name.Contains("Борислав"))
				{
					<li>Инвестиции в образование и иновации.</li>
					<li>Дългосрочна стабилност и ефективно управление.</li>
					<li>Развитие на устойчиви икономически политики.</li>
				}
				else if (Model.Name.Contains("Валентин"))
				{
					<li>Гарантиране на свободата на изразяване.</li>
					<li>Укрепване на гражданските права и прозрачност.</li>
					<li>Активна подкрепа за обществените инициативи.</li>
				}
				else if (Model.Name.Contains("Атанас"))
				{
					<li>Социална справедливост и равен достъп до ресурси.</li>
					<li>Подкрепа за работниците и семействата.</li>
					<li>Засилване на ролята на общността и солидарността.</li>
				}
				else
				{
					<li>Целите ще бъдат добавени скоро.</li>
				}
			</ul>
		</article>
	</div>
</section>
